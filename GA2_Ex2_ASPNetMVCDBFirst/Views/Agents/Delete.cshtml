@model GA2_Ex2_ASPNetMVCDBFirst.Agent

@{
    ViewBag.Title = "Delete Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 ">
    <div class="card p-4">
        <h2 class="mb-4">Delete Agent</h2>
        <h4 class="text-danger mb-4">Are you sure you want to delete this agent?</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.AgentName)</strong>
                    <p>@Html.DisplayFor(model => model.AgentName)</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Address)</strong>
                    <p>@Html.DisplayFor(model => model.Address)</p>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        }
    </div>
</div>