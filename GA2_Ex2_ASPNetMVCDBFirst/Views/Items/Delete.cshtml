@model GA2_Ex2_ASPNetMVCDBFirst.Item

@{
    ViewBag.Title = "Delete Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4">
        <h2 class="mb-4">Delete Item</h2>
        <h4 class="text-danger mb-3">Are you sure you want to delete this item?</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.ItemName)</strong>
                    <p>@Html.DisplayFor(model => model.ItemName)</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Size)</strong>
                    <p>@Html.DisplayFor(model => model.Size)</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.UnitPrice)</strong>
                    <p>@String.Format("{0:C}", Model.UnitPrice)</p>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        }
    </div>
</div>