@model GA2_Ex2_ASPNetMVCDBFirst.Item

@{
    ViewBag.Title = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-sm">
                    <div class="card-header text-primary">
                        <h2 class="mb-0">Item Details</h2>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title mb-4">@Model.ItemName</h4>
                        <p><i class="fas fa-ruler-vertical me-2 text-secondary"></i><strong>Size:</strong> @Model.Size</p>
                        <p><i class="fas fa-tag me-2 text-success"></i><strong>Price:</strong> $@Model.UnitPrice</p>

                        @using (Html.BeginForm("AddToCart", "Orders", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("itemId", Model.ItemID)
                            <div class="mb-3">
                                <label for="quantity" class="form-label"><i class="fas fa-plus-circle me-2 text-info"></i><strong>Quantity</strong></label>
                                <input type="number" id="quantity" name="quantity" class="form-control" min="1" value="1" />
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Shopping", "Items")" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Shop</a>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-cart-plus me-2"></i>Add to Cart</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>