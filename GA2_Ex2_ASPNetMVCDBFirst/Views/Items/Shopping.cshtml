@model IEnumerable<GA2_Ex2_ASPNetMVCDBFirst.Item>

@{
    ViewBag.Title = "Shopping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <h2 class="mb-4 text-primary">All Items</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@item.ItemName</h5>
                            <p class="card-text"><i class="fas fa-ruler-vertical me-2 text-secondary"></i>Size: @item.Size</p>
                            <p class="card-text"><i class="fas fa-tag me-2 text-success"></i>Price: $@item.UnitPrice</p>
                            <div class="mt-auto">
                                <a href="@Url.Action("ItemDetails", "Items", new { id = item.ItemID })" class="btn btn-primary"><i class="fas fa-info-circle me-2"></i>View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>