@model GA2_Ex2_ASPNetMVCDBFirst.OrderDetail

@{
    ViewBag.Title = "Delete Order Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="fw-bold mb-4">Delete Order Detail #@Model.ID</h2>
        <h4 class="text-danger mb-4">Are you sure you want to delete this order detail?</h4>
        <div>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Order ID:</strong> @Html.DisplayFor(model => model.Order.OrderID)</p>
                    <p><strong>Item:</strong> @Html.DisplayFor(model => model.Item.ItemName)</p>
                    <p><strong>Quantity:</strong> @Html.DisplayFor(model => model.Quantity)</p>
                    <p><strong>Unit Amount:</strong> @String.Format("{0:C}", Model.UnitAmount)</p>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>