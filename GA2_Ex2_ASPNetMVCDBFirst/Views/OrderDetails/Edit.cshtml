@model GA2_Ex2_ASPNetMVCDBFirst.OrderDetail

@{
    ViewBag.Title = "Edit Order Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4">
        <h2 class="mb-4">Edit Order Detail</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@Html.DisplayNameFor(model => model.OrderID)</label>
                    @Html.DropDownListFor(model => model.OrderID, (SelectList)ViewBag.OrderID, "Select Order", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.OrderID, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ItemID)</label>
                    @Html.DropDownListFor(model => model.ItemID, (SelectList)ViewBag.ItemID, "Select Item", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.ItemID, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Quantity)</label>
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    <label class="form-label">@Html.DisplayNameFor(model => model.UnitAmount)</label>
                    @Html.EditorFor(model => model.UnitAmount, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                    @Html.ValidationMessageFor(model => model.UnitAmount, "", new { @class = "text-danger" })
                </div>
                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}