@model GA2_Ex2_ASPNetMVCDBFirst.User

@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4">
        <h2 class="mb-4">Create User</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.UserName)</label>
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Password)</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.LockStatus)</label>
                    @Html.DropDownListFor(model => model.LockStatus, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Not Set", Value = "" },
                        new SelectListItem { Text = "True", Value = "true" },
                        new SelectListItem { Text = "False", Value = "false" }
                    }, new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.LockStatus, "", new { @class = "text-danger" })
                </div>
                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}