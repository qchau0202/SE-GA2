@model GA2_Ex2_ASPNetMVCDBFirst.User

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4">
        <h2 class="mb-4">Delete User</h2>
        <h4 class="text-danger mb-3">Are you sure you want to delete this user?</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.UserName)</strong>
                    <p>@Html.DisplayFor(model => model.UserName)</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Email)</strong>
                    <p>@Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Password)</strong>
                    <p>********</p>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.LockStatus)</strong>
                    <p>@Html.DisplayFor(model => model.LockStatus)</p>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        }
    </div>
</div>